#!/usr/bin/env bash

# Supex CLI wrapper for convenient access from project root
# This script allows running supex commands without cd to src/driver

set -e

# Change to supex project root (directory containing this script)
ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$ROOT_DIR" || exit 1

# Change to driver directory
cd src/driver || exit 1

# Run supex CLI with all arguments passed through
exec uv run supex "$@"
